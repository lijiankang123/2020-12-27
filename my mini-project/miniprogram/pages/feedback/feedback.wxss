page {
  background: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  text-align: center;
  padding: 10rpx;
  margin: 20rpx 10rpx;
  background: #fff;
}
.fb_main .fb_content {
  background: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx 15rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
}
.fb_main .fb_content .fb_tool button {
  margin: 0;
  padding: 0;
  width: 90rpx;
  height: 90rpx;
  background: #eee;
  font-size: 50rpx;
  color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .form_btn_wrap {
  display: flex;
  justify-content: flex-end;
  margin: 20rpx;
}
.fb_main .form_btn_wrap button {
  margin: 0;
  width: 30%;
  height: 70rpx;
  font-size: 30rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fb_main .form_btn_wrap button icon {
  margin-right: 20rpx;
}
button[type='warn'] {
  background-color: #fa5151;
  color: #f2f2f2;
}
button:not([size='mini']) {
  min-height: 0rpx;
}
